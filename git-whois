#!/bin/bash

isShowFirstCandidate=
isSelect=
case "$1" in
    --first|-1)	    shift; isShowFirstCandidate=t;;
    --select|-s)    shift; isSelect=t;;
esac

selectCandidates()
{
    if [ $# -eq 0 ]; then
	echo >&2 'ERROR: No candidates found.'
	exit 1
    elif [ $# -eq 1 ]; then
	printf '%s\n' "$1"
    else
	select person
	do
	    if [ "$person" ]; then
		printf '%s\n' "$person"
		exit 0
	    elif [ ! "$REPLY" ]; then
		exit 1
	    elif [ "$REPLY" = '?' ]; then
		cat >&2 <<-'EOF'
		    Enter a number to select the person.
		    Filter the list by entering "grep" arguments. (Double backslashes.)
		    Abort via Ctrl-D.
EOF
	    else
		typeset -a filteredCandidates=($(printf '%s\n' "$@" | grep $REPLY))
		selectCandidates "${filteredCandidates[@]}"
		break
	    fi
	done
    fi
}

IFS=$'\n'
typeset -a candidates=($(git log -i ${isShowFirstCandidate:+-1} --pretty='tformat:%aN <%aE>' ${1:+--author="$1"} | sort --unique))

if [ "$isShowFirstCandidate" ]; then
    printf '%s\n' "${candidates[0]}"
elif [ "$isSelect" ]; then
    selectCandidates "${candidates[@]}"
else
    printf '%s\n' "${candidates[@]}"
fi
