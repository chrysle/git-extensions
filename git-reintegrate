#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Merge <branch> to the current branch, then delete it from the local repository
as well as origin (if it exists there).
HELPTEXT
    printf 'Usage: %q %s\n' "$(basename "$1")" '<branch> [...]'
}

if [ $# -eq 0 ]; then
    echo >&2 'Need (at least one) <branch> to merge!'
    exit 2
fi
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
esac

git merge --no-ff "$@" || exit $?
git-oldeletebr --ignore-missing-in-origin "$@" || exit $?
