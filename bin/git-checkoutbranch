#!/bin/bash
shopt -qs extglob

printUsage()
{
    cat <<HELPTEXT
Check out a (new or existing) branch. Enforces that such is passed.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[-f|--force] [--gui|--terminal|--none] -b <branch>|-B <branch> [--submodules] [CHECKOUT-ARGS ...] [-?|-h|--help]'
}

typeset -a branchArgs=()
typeset -a checkoutArgs=()
logArg=
while [ $# -ne 0 ]
do
    case "$1" in
	--help|-h|-\?)	shift; printUsage "$0"; exit 0;;
	--no-color|--color=*)
			shift;;
	--color)	shift; shift;;
	-[bB])		branchArgs+=("$1" "$2"); shift; shift;;
	--submodules)	checkoutArgs+=("$1"); shift;;
	--@(gui|terminal|none))
			logArg="$1"; shift;;
	*)		break;;
    esac
done
if [ ${#branchArgs[@]} -eq 0 ]; then
    echo 'ERROR: No -b|-B <branch> passed.'
    echo
    printUsage "$0"
    exit 2
fi >&2

if [ $# -eq 0 -o -z "$logArg" -o "$logArg" = --none ]; then
    exec git-wrapper checkout "${checkoutArgs[@]}" "${branchArgs[@]}" "$@"
else
    exec git-logdelta $logArg -- git-wrapper checkout "${checkoutArgs[@]}" "${branchArgs[@]}" "$@"
fi
