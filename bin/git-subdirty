#!/bin/bash
set -o pipefail

printUsage()
{
    cat <<HELPTEXT
Show a list of all submodules that contain modified content.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[--] [<path>...] [-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
esac

git-stfiles --porcelain=1 --untracked-files=no --ignore-submodules=untracked "$@" | \
    git-subfilter
