#!/bin/bash
set -o pipefail

printUsage()
{
    cat <<HELPTEXT
Add unstaged changes from already staged files; update stage.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[--] [<path>...] [-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
esac


git-staged "$@" | \
    xargs --no-run-if-empty --delimiter '\n' git add && \
	git status -sb
