#!/bin/bash


printUsage()
{
    cat <<HELPTEXT
Unassociate from the current branch without changing the current commit. Useful
e.g. for separate worktrees, because they all must be on distinct branches.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[-?|-h|--help]'
    echo
    at <<HELPTEXT
Detach HEAD at passed <commit>.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '<commit> [-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
    --no-color|--color=*)
			shift;;
    --color)		shift; shift;;
esac

exec git checkout --detach "$@"
