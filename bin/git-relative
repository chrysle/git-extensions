#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Show relative dir of the CWD / passed DIR|FILE in relation to its Git working
copy root.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[--] [DIR|FILE] [-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
    --)			shift;;
esac

basename=
case $# in
    0)	;;
    1)	if [ -d "$1" ]; then
	    dirspec="$1"
	else
	    dirspec="$(dirname -- "$1")"
	    basename="$(basename -- "$1")"
	fi
	[ "$dirspec" = '.' ] || cd "$dirspec" || exit 3
	;;
    *)	printUsage "$0" >&2
	exit 2
	;;
esac
prefix="$(git rev-parse --show-prefix)" || exit 3
printf '%s%s\n' "$prefix" "$basename"
