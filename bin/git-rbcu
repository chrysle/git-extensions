#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
addu + rbc: Stage modified files (i.e. those with resolved conflicts) and
continue rebasing.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[ADD-ARGS ...] [--] [<path> ...] [-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
    --no-color|--color=*)
			shift;;
    --color)		shift; shift;;
esac

git add --update "$@" && git ${GIT_RBCU_REBASE_CONFIG:+-c "$GIT_RBCU_REBASE_CONFIG"} rebase --continue
