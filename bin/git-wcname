#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Show the name of the working copy.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
esac
if [ $# -ne 0 ]; then
    printUsage "$0" >&2
    exit 2
fi

root="$(git root)" || exit $?
printf '%s\n' "$(basename -- "$root")"
