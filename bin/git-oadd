#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Add origin repository and fetch it. Offers to rename original origin to
upstream.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" 'URL [-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
    --no-color|--color=*)
			shift;;
    --color)		shift; shift;;
esac
if [ $# -ne 1 ]; then
    echo >&2 'Need to pass URL!'
    echo
    printUsage "$0"
    exit 2
fi >&2


oldOrigin="$(git remote get-url origin 2>/dev/null)"

if [ -n "$oldOrigin" ]; then
    userBinaryChoice --introduction "origin already exists: $oldOrigin" --question 'Rename to upstream?' --yes-no || exit 4

    git remote rename origin upstream || exit $?
fi

exec git remote add -f origin "$1"
