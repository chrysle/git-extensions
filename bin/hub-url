#!/bin/bash
set -o pipefail

printUsage()
{
    cat <<HELPTEXT
Print the URL of a GitHub repository.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[[USER/]REPOSITORY|--] [SUBPAGE] [-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
esac

git-existsremote || exit $?

typeset -a clipboardPipeline=()
[ -t 1 ] && typeset -a clipboardPipeline=(clipboard --tee)
eval 'hub browse -u "$@" 2>/dev/null' "${clipboardPipeline:+|}" '"${clipboardPipeline[@]}"'
