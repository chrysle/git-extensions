#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Show which remote is tracked by the current / passed branch.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '<branch> [-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
esac

trackedRemoteBranch="$(git-tracks "$@")" || exit $?
printf '%s\n' "${trackedRemoteBranch%%/*}"
