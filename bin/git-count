#!/bin/bash
set -o pipefail

printUsage()
{
    cat <<HELPTEXT
Count the amount of commits.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[<log-options>] [<revision range>] [[--] <path>...] [-?|-h|--help]'
}
typeset -a logArgs=()
while [ $# -ne 0 ]
do
    case "$1" in
	--help|-h|-\?)	shift; printUsage "$0"; exit 0;;
	--no-color|--color=*)
			shift;;
	--color)	shift; shift;;
	--pretty)	shift; shift;;
	--pretty=*)	shift;;
	--)		logArgs+=("$1"); shift; break;;
	*)		logArgs+=("$1"); shift;;
    esac
done

git log --pretty=tformat:x "${logArgs[@]}" "$@" | wc -l
