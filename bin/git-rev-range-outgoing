#!/bin/bash

remote=$1; shift

branch='HEAD'
typeset -a args=()
while [ $# -ne 0 ]
do
    case "$1" in
	--help|-h|-\?)	shift; printUsage "$0"; exit 0;;
	--branch|-b)	shift; branch="$1"; shift;;
	--)		shift; break;;
	*)		args+=("$1"); shift;;
    esac
done
set -- "${args[@]}" "$@"

if [ "$remote" ]; then
    remoteBranch=$(git-remotebr "$remote" "$branch")
else
    remoteBranch=$(git-tracks "$branch")
fi || exit $?

exec git-rev-range --revision "$remoteBranch" --end-revision "$branch" "$@"
