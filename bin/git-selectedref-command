#!/bin/bash
set -o pipefail
shopt -qs extglob

printUsage()
{
    cat <<HELPTEXT
Execute GIT-COMMAND for the commit interactively chosen from the (recent | N)
commits [that cover FILE ...] from the reflog.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[--accept-single] [--single-only] [-c ...] GIT-COMMAND --since <date>|--max-count|-n|<range> [<git-command-args> ...] [--] [FILE ...] [-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
    --source)		shift
			typeset -a reflogArgs=()
			number=
			while [ $# -ne 0 ]
			do
			    case "$1" in
				--max-count)	shift; number="${1:?}"; shift;;
				--max-count=*)	number="${1#--max-count=}"; shift;;
				-n)		shift; number="${1:?}"; shift;;
				-+([0-9]))	number="${1#-}"; shift;;
				--)		break;;
				*)		reflogArgs+=("$1"); shift;;
			    esac
			done
			getUniqueReflogEntries()
			{
			    git reflog show "${reflogArgs[@]}"  | uniqueStable --skip ' .*$'
			}
			eval 'getUniqueReflogEntries' "${number:+|}head -n $number"
			exit $?
			;;
esac

readonly scriptName="$(basename -- "${BASH_SOURCE[0]}")"

GIT_SELECTEDCOMMIT_COMMAND="${scriptName#git-} --source" GIT_SELECTEDCOMMIT_COMMAND_FORMAT='%d %gs' \
    exec git-selectedcommit-command "$@"
