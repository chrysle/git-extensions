#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Add upstream repository (read-only) and fetch it.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" 'URL [-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
esac
if [ $# -ne 1 ]; then
    printUsage "$0" >&2
    exit 2
fi

git remote add -f upstream "$@" \
    && git-remote-setreadonly upstream
