#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Show a combined short one-line diffstat for each user that authored commits separately.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[<log-options>] [<revision range>] [[--] <path>...] [-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
esac

exec git-segregated-user-command --prefixed --with-log-args logsta "$@"
