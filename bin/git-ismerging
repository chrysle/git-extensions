#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Test whether a merge (conflict resolution) is currently under way.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
    --no-color|--color=*)
			shift;;
    --color)		shift; shift;;
esac

gitDir="$(git rev-parse --git-dir 2>/dev/null)" || exit 3

[ -f "${gitDir}/MERGE_HEAD" ]
