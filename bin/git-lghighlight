#!/bin/bash
set -o pipefail

printUsage()
{
    cat <<HELPTEXT
git lg, with lines that match passed PATTERN highlighted
HELPTEXT
    printf 'Usage: %q %s\n' "$(basename "$1")" 'PATTERN [GIT-LOG-ARGUMENTS ...] [<revision range>] [[--] <path>...] [-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
esac
if [ $# -eq 0 ]; then
    echo 'ERROR: No PATTERN passed.'
    echo
    printUsage "$0"
    exit 2
fi >&2
pattern="${1:?}"; shift
typeset -a gitLogArgs=()
while [ $# -ne 0 ]
do
    case "$1" in
	--help|-h|-\?)	shift; printUsage "$0"; exit 0;;
	--)		gitLogArgs+=("$@"); break;;
	*)		gitLogArgs+=("$1"); shift;;
    esac
done


lghighlight()
{
    git lg "${gitLogArgs[@]}" | sed -e "/${pattern//\//\/}/"'{ s#\[0*m#&[07m#g; s#.*#[07m&[0m# }'
}

typeset -a pager=("${PAGER:-less}" --RAW-CONTROL-CHARS); [ -t 1 ] || pager=()
eval 'lghighlight "$@"' "${pager:+|}" '"${pager[@]}"'
