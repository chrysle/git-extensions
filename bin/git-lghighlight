#!/bin/bash
set -o pipefail

printUsage()
{
    cat <<HELPTEXT
git lg, with lines that match passed PATTERN highlighted
HELPTEXT
    printf 'Usage: %q %s\n' "$(basename "$1")" 'PATTERN [GIT-LOG-ARGUMENTS ...] [<revision range>] [[--] <path>...] [-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
esac
if [ $# -eq 0 ]; then
    echo 'ERROR: No PATTERN passed.'
    echo
    printUsage "$0"
    exit 2
fi >&2
pattern="${1:?}"; shift
typeset -a colorArg=(--color=always)
typeset -a pager=("${PAGER:-less}" --RAW-CONTROL-CHARS)
if [ ! -t 1 ]; then
    colorArg=()
    pager=()
fi
typeset -a gitLogArgs=()
while [ $# -ne 0 ]
do
    case "$1" in
	--help|-h|-\?)	shift; printUsage "$0"; exit 0;;
	--color=auto)		colorArg=("$1"); colorArg=(--color=always); shift;;
	--no-color|--color=*)	colorArg=("$1"); shift;;
	--color)		colorArg=("$1" "$2"); if [ "$2" = auto ]; then colorArg=("$1" always); fi; shift; shift;;
	--)		gitLogArgs+=("$@"); break;;
	*)		gitLogArgs+=("$1"); shift;;
    esac
done


lghighlight()
{
    git lg "${colorArg[@]}" "${gitLogArgs[@]}" | sed -e "/${pattern//\//\/}/"'{ s#\[0*m#&[07m#g; s#.*#[07m&[0m# }'
}

eval 'lghighlight "$@"' "${pager:+|}" '"${pager[@]}"'
