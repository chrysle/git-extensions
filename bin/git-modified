#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Test whether there are / list modified (staged and unstaged) files.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[--] [<path>...] [-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
esac


paths="$(git diff --name-only HEAD -- "$@")"
if [ -n "$paths" ]; then
    printf '%s\n' "$paths"
else
    exit 1
fi
