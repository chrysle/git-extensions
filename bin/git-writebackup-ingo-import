#!/bin/bash

typeset -a editArgs=()
</dev/tty read -r -N 1 -p "Do you want to check / edit every extracted version message? (y/n) " choice; echo >/dev/tty
[ "$choice" = 'y' ] && editArgs=(--edit-plugin-message)

exec git-writebackup-import "${editArgs[@]}" --commit-message-plugin ingo-extract-version-message "$@"
