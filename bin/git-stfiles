#!/bin/bash
set -o pipefail

printUsage()
{
    cat <<HELPTEXT
Just list any changed files (for renames both original and resulting file as
separate lines).
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[--] [<pathspec>...] [-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
esac


git status --short "$@" | sed -e 's/^...//' -e 's/\(.*\) -> \(.*\)/\1\n\2/'
