#!/bin/bash
set -o pipefail

printUsage()
{
    cat <<HELPTEXT
List tags by age.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[<pattern> ...] [-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
esac

git tag --list --sort=-creatordate --format='%(creatordate:iso)	(%(creatordate:relative))	%(refname:short)' "$@" | \
    column -s $'\t' -t
