#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Check whether the passed <branch> currently exists in ${remote:-REMOTE} (by actually
contacting the repository).
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" 'REMOTE <branch> [-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
    --no-color|--color=*)
			shift;;
    --color)		shift; shift;;
esac
remote=${1:?}; shift
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
    --no-color|--color=*)
			shift;;
    --color)		shift; shift;;
esac

exec git ls-remote --heads --exit-code "$remote" "${1:?}" >/dev/null 2>&1
