#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Initial publish of current / passed <branch> to ${remote:-REMOTE}.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" "${remote:-REMOTE} [<branch> ...] [-?|-h|--help]"
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
    --no-color|--color=*)
			shift;;
    --color)		shift; shift;;
esac

remote=${1:?}; shift
typeset -a forceArg=()
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
    --no-color|--color=*)
			shift;;
    --color)		shift; shift;;
    --force|-f)		forceArg+=("$1"); shift;;
esac

exec git-remote-mutate "$remote" --message 'Publish' --arguments "$@" \; \
    push "${forceArg[@]}" --set-upstream "$remote" "${@:-HEAD}"
