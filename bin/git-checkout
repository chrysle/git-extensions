#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Switch or create branches.
Can also check out corresponding branches in submodules with --submodules
(queried ones with --queried-submodules).
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[--submodules|--queried-submodules] [<checkout-args> ...] [-?|-h|--help]'
}

isSubmoduleCheckout=
subcobrInteractivityArg=
typeset -a checkoutArgs=()
while [ $# -ne 0 ]
do
    case "$1" in
	--help|-h|-\?)	shift; printUsage "$0"; exit 0;;
	--no-color|--color=*)
			shift;;
	--color)	shift; shift;;
	--submodules)	shift; isSubmoduleCheckout=t; subcobrInteractivityArg='--all';;
	--queried-submodules)
			shift; isSubmoduleCheckout=t; subcobrInteractivityArg='--query';;
	--)		checkoutArgs+=("$1"); shift; break;;
	*)		checkoutArgs+=("$1"); shift;;
    esac
done

git checkout "${checkoutArgs[@]}" "$@" || exit $?

[ "$isSubmoduleCheckout" ] || exit 0
exec git-wrapper "${GIT_CHECKOUT_SUBMODULES_COMMAND:-subcolocalbr}" "${subcobrInteractivityArg:?}"
