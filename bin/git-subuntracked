#!/bin/bash
set -o pipefail

printUsage()
{
    cat <<HELPTEXT
Show a list of all submodules that contain untracked files.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[--] [<path>...] [-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
esac

git status --short --untracked-files=no --ignore-submodules=none | \
    sed -ne 's/^ ? //p' | \
    git-subfilter
