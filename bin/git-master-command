#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Execute GIT-COMMAND with MASTER argument(s) replaced in ARG(s) or those
following GIT-COMMAND / appending the name of the default (master) branch.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" 'GIT-COMMAND [...] [-?|-h|--help]'
    printf 'Usage: %q %s\n' "$(basename "$1")" '--keep-position GIT-COMMAND [... MASTER ...] [-?|-h|--help]'
    printf 'Usage: %q %s\n' "$(basename "$1")" '[-1 ARG1|-2 ARG1 ARG2| -3 ARG1 ARG2 ARG3| ...] GIT-COMMAND [...] [-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
esac

if ! masterBranch="$(git-mbr)"; then
    exit 2
elif [ $# -eq 0 ]; then
    echo >&2 'ERROR: No GIT-COMMAND passed.'
    exit 2
fi

case "$1" in
    -[1-9])
	typeset masterArgNum=${1#-}
	typeset -a masterArgs=("${@:2:${masterArgNum}}")
	set -- "${@:$((2 + masterArgNum))}"

	masterArgs=("${masterArgs[@]//MASTER/${masterBranch}}")

	exec git-wrapper "$@" "${masterArgs[@]}"
	;;
    --keep-position)
	shift
	exec git-wrapper "${@//MASTER/${masterBranch}}"
	;;
    *)
	exec git-wrapper "$@" "$masterBranch"
	;;
esac
