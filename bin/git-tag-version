#!/bin/bash


printUsage()
{
    cat <<HELPTEXT
Create an annotated tag, mostly used for official releases.
HELPTEXT
    printf 'Usage: %q %s\n' "$(basename "$1")" '[-f] VERSION [<commit>|<object>] [-?|-h|--help]'
}
typeset -a tagArgs=()
while [ $# -ne 0 ]
do
    case "$1" in
	--help|-h|-\?)	shift; printUsage "$0"; exit 0;;
	--no-color|--color=*)
			shift;;
	--color)	shift; shift;;
	--force|-f)	tagArgs+=("$1"); shift;;
	--)		shift; break;;
	*)		break;;
    esac
done
if [ $# -eq 0 ]; then
    printUsage "$0" >&2
    exit 2
fi

version="$1"
git tag -a "${tagArgs[@]}" -m "version ${version}" "$@" || exit $?
! git existsremote origin || git push origin "${version/#/refs/tags/}"
