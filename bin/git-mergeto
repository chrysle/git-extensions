#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Merge the current branch to <target-branch>.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '<target-branch> [MERGE-ARGS ...] [-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
    --no-color|--color=*)
			shift;;
    --color)		shift; shift;;
esac


if [ $# -eq 0 ]; then
    echo >&2 'Need <branch> to merge to!'
    exit 2
fi
targetBranch="$1"
shift

branch=$(git symbolic-ref HEAD) || exit $?
branch=${branch##refs/heads/}

git checkout "$targetBranch" && git-wrapper merge "$@" "$branch"
