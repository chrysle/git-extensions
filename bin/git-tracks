#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Show which remote branch is tracked by the current / passed branch.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '<branch> [-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
    --no-color|--color=*)
			shift;;
    --color)		shift; shift;;
esac

exec git rev-parse --abbrev-ref "${1}@{upstream}"
