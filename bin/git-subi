#!/bin/bash
set -o pipefail

printUsage()
{
    cat <<HELPTEXT
Show a list of submodules that are currently staged in the superproject.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[--] [<path>...] [-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
esac

# <XY>        A 2 character field containing the staged and
#             unstaged XY values described in the short format,
#             with unchanged indicated by a "." rather than
#             a space.
# "S<c><m><u>" when the entry is a submodule.
# Note: Apparently, because the change is already staged, the <c> flag is cleared.
# Example: 1 M. S... 160000 160000 160000 13d84782fc3bba6a483ab9304dc520e3b6368613 13d84782fc3bba6a483ab9304dc520e3b6368613 submodule
git status --porcelain=2 --untracked-files=no --ignore-submodules=none --no-renames "$@" | \
    sed -ne 's/^1 M. S... [[:digit:]]\+ [[:digit:]]\+ [[:digit:]]\+ [[:xdigit:]]\+ [[:xdigit:]]\+ \(.*\)$/\1/p'
