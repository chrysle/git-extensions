#!/bin/bash
# Source: https://github.com/sschuberth/dev-scripts/blob/master/git/git-rename-remote-branch.sh

printUsage()
{
    cat <<HELPTEXT
Rename a branch on the server without checking it out.
HELPTEXT
    printf 'Usage: %q %s\n' "$(basename "$1")" '<remote> <old> <new> [-?|-h|--help]'
    printf 'Example: %q %s\n' "$(basename "$1")" 'origin master release'
}

case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
    --no-color|--color=*)
			shift;;
    --color)		shift; shift;;
esac
if [ $# -ne 3 ]; then
    printUsage "$0" >&2
    exit 2
fi
remote="$1"; shift
old="$1"; shift
new="$1"; shift

exec git-remote-mutate "$remote" --message "Rename branch $old to $new" \
    push "$remote" "${remote}/${old}:refs/heads/${new}" ":$old"
