#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
List files with merge conficts.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[--] [<path> ...] [-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
    --no-color|--color=*)
			shift;;
    --color)		shift; shift;;
esac

git ls-files --unmerged "$@" | cut -f2 | uniq
