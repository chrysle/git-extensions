#!/bin/bash
set -o pipefail

printUsage()
{
    cat <<HELPTEXT
Add manually deleted (or moved) files to the index.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[--] [<file>...] [-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
esac

git ls-files --deleted "$@" | \
    xargs --no-run-if-empty --delimiter '\n' git add && \
	git status -sb
