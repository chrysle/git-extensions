#!/bin/bash
set -o pipefail
shopt -qs extglob

printUsage()
{
    cat <<HELPTEXT
Show log grouped by name and sorted by the number of their commits.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[-N|--alphabetic] [LOG-ARGS ...] [<revision range>] [[--] <path>...] [-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
esac


typeset -a logArgs=()
typeset -a shortlogOrderingArg=(--numbered)
typeset -a shortlogArgs=()
typeset -a filter=(grep -v -e '^[[:space:]]*<none>$')
while [ $# -ne 0 ]
do
    case "$1" in
	-+([ce]))	shortlogArgs+=("$1"); shift;;
	-w*)		shortlogArgs+=("$1"); shift; shift;;
	--@(committer|email))
			shortlogArgs+=("$1"); shift;;
	--summary|-s)	shortlogArgs+=("$1"); shift
			filter=(sed -e '/^[[:space:]]*1[[:space:]]\+/{ $b }' -e ':loop' -e 's/^[[:space:]]*1[[:space:]]\+\(.*\)$/\1/' -e T -e 'H; $!{ N; s/.*\n//; b loop }' -e '${ g; s/^\n/Single contributors: /; s/\n/, /g }'  )
			;;
	--alphabetic|-N)
			shift; shortlogOrderingArg=();;
	--)		break;;
	*)		logArgs+=("$1"); shift;;
    esac
done

typeset -a pager=("${PAGER:-less}" --RAW-CONTROL-CHARS); [ -t 1 ] || pager=()
if [ ${#logArgs[@]} -eq 0 ]; then
    git shortlog "${shortlogOrderingArg[@]}" "${shortlogArgs[@]}" "$@"
else
    git log --pretty=short "${logArgs[@]}" "$@" | git shortlog "${shortlogOrderingArg[@]}" "${shortlogArgs[@]}"
fi | \
    eval '"${filter[@]}"' "${pager:+|}" '"${pager[@]}"'
