#!/bin/bash
set -e

printUsage()
{
    cat <<HELPTEXT
Test whether the current working copy directly refers to a tagged commit.
HELPTEXT
    printf 'Usage: %q %s\n' "$(basename "$1")" '[-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
esac

exec git describe --tags HEAD >/dev/null 2>&1
