#!/bin/bash
set -o pipefail

printUsage()
{
    cat <<HELPTEXT
List all branches, both local and remote [matching <glob>].
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[<glob> ...] [-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
    --no-color|--color=*)
			shift;;
    --color)		shift; shift;;
esac

git branch --all --list "$@" | \
    sed -e '/^ *.*\/HEAD -> /d' \
	-e '/^\* /d' \
	-e 's/^[[:space:]]\+//' \
	-e 's#^remotes/##'
