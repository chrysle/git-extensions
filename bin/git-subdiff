#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Show diff only of submodules (excluding changes in the current main repo).
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[--no-pager] [DIFF-ARGS ...] [-?|-h|--help]'
}
typeset -a pager=("${PAGER:-less}" --RAW-CONTROL-CHARS)
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
    --no-pager)		shift; pager=();;
    --diffmassage)	shift
			literalSubmodulePath="${displaypath:?}"
			literalSubmodulePath="${literalSubmodulePath//\\/\\\\}"
			literalSubmodulePath="${literalSubmodulePath//&/\\&}"
			sed -e 's#^\(\(\x1b\[[0-9:;]*[mK]\)*\)\(diff --git i/\)\(.*\)\( w/\)\(.*\)#'"\\1\\3${literalSubmodulePath//#/\\#}/\\4\\5${literalSubmodulePath//#/\\#}/\\6#" \
			    -e 's#^\(\(\x1b\[[0-9:;]*[mK]\)*\)\(--- i/\|+++ w/\)\(.*\)#'"\\1\\3${literalSubmodulePath//#/\\#}/\\4#"
			exit $?
			;;
esac

submoduleDiff()
{
    local quotedDiffArgs=; if [ $# -gt 0 ]; then printf -v quotedDiffArgs '%q ' "$@"; quotedDiffArgs="${quotedDiffArgs% }"; fi
    local quotedScriptFilespec; printf -v quotedScriptFilespec %q "${BASH_SOURCE[0]}"
    git submodule foreach --recursive --quiet "git ${GIT_SUBDIFF_DIFFCOMMAND:-diff} $quotedDiffArgs | $quotedScriptFilespec --diffmassage"
}

if [ -t 1 ]; then
    isColorOffArgument "$@" || set -- '--color=always' "$@"
else
    pager=()
fi
eval 'submoduleDiff "$@"' "${pager:+|}" '"${pager[@]}"'
