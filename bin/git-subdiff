#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Show diff only of submodules (excluding changes in the current main repo).
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[DIFF-ARGS ...] [-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
esac

quotedDiffArgs=; if [ $# -gt 0 ]; then printf -v quotedDiffArgs '%q ' "$@"; quotedDiffArgs="${quotedDiffArgs% }"; fi
exec git submodule foreach --recursive --quiet "git diff $quotedDiffArgs"
