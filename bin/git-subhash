#!/bin/bash
# Source: https://stackoverflow.com/a/32327200/813602

printUsage()
{
    cat <<HELPTEXT
Show the commit ID recorded in the superproject for passed <submodule>.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '<submodule> [-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
esac
if [ $# -ne 1 ]; then
    printUsage "$0" >&2
    exit 2
fi

exec git rev-parse "HEAD:${1:?}"
