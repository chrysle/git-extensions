#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Commit only new files, respecting the ignore patterns.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[<commit-arguments> ...] <ref>|:/<pattern> [-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
esac


hasStashed=
if git-staged --quiet 2>/dev/null; then
    git-stashi || exit $?
    hasStashed=t
fi
git-adduntracked && git-commit "$@"
status=$?
if [ "$hasStashed" ]; then
    git stash pop || exit $?
fi
exit $status
