#!/bin/bash

formatPrefix=
formatSuffix=
while [ $# -ne 0 ]
do
    case "$1" in
	--)		shift; break;;
	--long|-l)	shift; formatPrefix='%h %<(12,trunc)%aN %ad '; formatSuffix=;;
	-*)		{ echo "ERROR: Unknown option \"$1\"!"; echo; printUsage "$0"; } >&2; exit 2;;
	*)		break;;
    esac
done

IFS=$'\n'
for filespec in $(find "$@" -maxdepth 1 -type f -print | sort)
do
    file=${filespec#./}
    git log --pretty=format:"${formatPrefix}${file//%/%%}${formatSuffix}" --max-count 2 -- "$filespec"
done
