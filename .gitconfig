[color]
	branch = auto
	diff = auto
	grep = auto
	interactive = auto
	status = auto
	ui = auto
[color "branch"]
	current = normal reverse
	local = normal
	remote = normal dim
	plain = normal ul
[color "diff"]
	plain = normal dim
	meta = normal
	frag = blue bold
	old = red
	new = green
	commit = cyan
	# whitespace =
[color "grep"]
	external = --color=always
	match = "bold"
[color "interactive"]
	prompt = normal reverse
	header = normal bold
	help = normal
	# error = 
[color "status"]
	header = green
	updated = normal
	changed = normal ul
	untracked = normal bold
[core]
	# Note: Must specify the full path, as git prepends /usr/bin to $PATH,
	# and this would pick up the (outdated) distribution's Vim. 
	editor = /usr/local/bin/vim

	# Do not highlight trailing whitespace; I use this in comments. 
	whitespace=space-before-tab
[merge]
	tool = /usr/local/bin/vimdiff
