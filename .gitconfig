[alias]
	changes = diff --name-status -r ; Subversion-like 'svn status' reporting.
	ci = commit -a ; Check in all changes. 
	co = checkout
	dh = diff HEAD ; Diff with HEAD; view changes since last commit. 
	di = diff --cached ; Diff with index; view changes about to be committed. 
	st = status
[color]
	branch = auto
	diff = auto
	grep = auto
	interactive = auto
	status = auto
	ui = auto ; Requires git 1.6. 
[color "branch"]
	current = normal reverse
	local = normal
	remote = normal dim
	plain = normal ul
[color "diff"]
	plain = normal
	meta = cyan
	frag = blue bold
	old = red
	new = green
	commit = cyan
	; whitespace =
[color "grep"]
	external = --color=always
[color "interactive"]
	prompt = normal reverse
	header = normal bold
	help = normal
	; error = 
[color "status"]
	header = green
	updated = normal
	changed = normal ul
	untracked = normal bold
[core]
	editor = vim

	; Do not highlight trailing whitespace; I use this in comments. 
	whitespace=space-before-tab
[diff]
	renames = true
[merge]
	conflictstyle = diff3	; Requires git 1.6. 
	; Note: Cannot use the full path here, as git only recognizes certain
	; executable names. 
	tool = gvimdiff
